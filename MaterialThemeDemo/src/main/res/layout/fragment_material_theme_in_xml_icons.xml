<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    style="@style/CardStyle.Home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/material_theme_icons"
            android:textAppearance="@style/TextStyle.Title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_spacing_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                style="@style/ImageStyle.Colored"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="@dimen/view_spacing_extra_small"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                style="@style/ImageStyle.Colored"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="@dimen/view_spacing_extra_small"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_palette"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_spacing_small"
                android:text="@string/material_theme_current_theme"
                android:textAppearance="@style/TextStyle.Body1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_spacing_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:theme="@style/AppTheme.Green">

            <ImageView
                style="@style/ImageStyle.Colored"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="@dimen/view_spacing_extra_small"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                style="@style/ImageStyle.Colored"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="@dimen/view_spacing_extra_small"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_palette"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_spacing_small"
                android:text="@string/material_theme_green_theme"
                android:textAppearance="@style/TextStyle.Body1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_spacing_small"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:theme="@style/AppTheme.Blue">

            <ImageView
                style="@style/ImageStyle.Colored"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="@dimen/view_spacing_extra_small"
                android:adjustViewBounds="true"
                android:src="@mipmap/ic_launcher"/>

            <ImageView
                style="@style/ImageStyle.Colored"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="@dimen/view_spacing_extra_small"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_palette"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/view_spacing_small"
                android:text="@string/material_theme_blue_theme"
                android:textAppearance="@style/TextStyle.Body1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>