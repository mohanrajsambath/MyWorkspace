<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/bluelight">

    <TextView
        android:id="@+id/txtVw_done"
        android:textColor="#fff"
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/imgVw_close"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_clear_"
        android:layout_gravity="end|top"
        tools:ignore="ContentDescription"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <mohan.com.datetimepicker.utils.SingleDateAndTimePicker
        android:id="@+id/single_day_picker1"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:visibility="gone"
        app:picker_curved="false"
        app:picker_cyclic="false"
        app:picker_mustBeOnFuture="true"
        app:picker_visibleItemCount="7"
        app:layout_constraintTop_toBottomOf="@+id/imgVw_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <mohan.com.datetimepicker.utils.SingleDateAndTimePicker
        android:id="@+id/single_day_picker2"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:visibility="gone"
        app:picker_curved="false"
        app:picker_cyclic="false"
        app:picker_mustBeOnFuture="true"
        app:picker_visibleItemCount="7"
        app:layout_constraintTop_toBottomOf="@+id/imgVw_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>

