<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- view background color -->
    <solid
        android:color="#029c45" >
    </solid>

    <!-- view border color and width -->
    <stroke
        android:width="1dp"
        android:color="#00ff37" >
    </stroke>

    <!-- If you want to add some padding -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"    >
    </padding>

    <!-- Here is the corner radius -->
    <corners
        android:radius="5dp"   >
    </corners>
</shape>