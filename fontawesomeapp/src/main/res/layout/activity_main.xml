<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/icons_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_minion"
    tools:context=".activity.MainActivity">
    <!--android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"-->

    <LinearLayout
        android:id="@+id/filetype_container"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:paddingStart="35dp"
        android:paddingEnd="35dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:background="#B3000000">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txTw_Video"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/video"
                android:textColor="#ffffff"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:background="@drawable/round_rect_shape"
                android:duplicateParentState="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txTw_audio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/audio"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txTw_library"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/library"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txTw_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/link"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/icons_container_camera"
        android:layout_width="match_parent"
        android:layout_above="@+id/filetype_container"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:background="#80000000">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txTw_flipCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_flip_camera"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txTw_circle_outside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_circle"
                android:textColor="#ffffff"
                android:textSize="60sp"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/txTw_circle_inside"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_circle"
                android:textColor="#d7000e"
                android:textSize="50sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/txTw_scriptEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fa_icon_scriptedit"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>


    <!--ActionBar Design-->
    <LinearLayout
        android:id="@+id/icons_actionbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        >

        <TextView
            android:id="@+id/txtVw_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.25"
            android:textSize="20sp"
            android:textColor="@color/colorGreen"

            android:text="@string/fa_icon_time" />

        <TextView
            android:id="@+id/txtVw_record_duration"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:text="@string/record_duration" />

        <TextView
            android:id="@+id/txtVw_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="0.25"
            android:textSize="20sp"
            android:textColor="@color/colorGreen"
            android:text="@string/fa_icon_cog" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/icons_container_webfont"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/icons_actionbar"
        android:visibility="gone"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="#9b59b6"
            android:text="@string/fa_icon_areachart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="#3498db"
            android:text="@string/fa_icon_piechart" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="#1abc9c"
            android:text="@string/fa_icon_linechart" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/icons_container_brand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/icons_container_webfont"
        android:visibility="gone"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fa_icon_500px"
            android:textColor="#9b59b6"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fa_icon_affiliatetheme"
            android:textColor="#3498db"
            android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/fa_icon_dandd"
            android:textColor="#1abc9c"
            android:textSize="30sp" />

    </LinearLayout>





</RelativeLayout>